using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class KeyboardInput : MonoBehaviour
{
    string mytext1, mytext2;
    public KeyCode mykey;
    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void Update()
    {
        if(Input.GetKeyDown("a")){
            mytext1="keypressed = a";
        }
        if(Input.GetKey(KeyCode.B)){
            mytext1="keydown = b";
        }
        if(Input.GetKeyUp(mykey)){
            mytext1="tombol pilihan user";
        }
        if(Input.anyKey){
            mytext2="ada tombol yg dipencet terus menerus";
        }else
        {
            mytext2="";
        }
        if(Input.GetAxis("Fire1")>0){
            mytext1="KeyUp: Left ctrl/left mouse";
        }
    }
    void OnGUI() {
        GUILayout.BeginArea(new Rect(10,10,400,200));
        GUILayout.Label(mytext1);
        GUILayout.Label(mytext2);
        GUILayout.EndArea();
    }
}
